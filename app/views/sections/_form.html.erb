<%= form_for(section) do |f| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :term %>
    <%= f.text_field :term %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
  </div>

  <div class="field">
    <%= f.label :end_time %>
    <%= f.text_field :end_time %>
  </div>

  <div class="field">
    <%= f.label :max_students %>
    <%= f.number_field :max_students %>
  </div>

  <div class="field">
    <%= f.label :enrolled_students %>
    <%= f.number_field :enrolled_students %>
  </div>

  <div class="field">
    <%= f.label :room %>
    <%= f.text_field :room %>
  </div>

  <div class="field">
    <%= f.label :course_id %>
    <%= f.select(:course_id, options_from_collection_for_select(Course.all, :id, :title))%>
  </div>

  <div class="field">
    <%= f.label :professor_id %>
    <%= f.select(:professor_id, options_from_collection_for_select(Professor.all, :id, :name))%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


