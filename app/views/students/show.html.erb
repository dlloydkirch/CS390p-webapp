<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @student.name %>
</p>

<p>
  <strong>Id number:</strong>
  <%= @student.id_number %>
</p>

<p>
  <strong>Major:</strong>
  <%= @student.major %>
</p>

<p>
  <strong>Email:</strong>
  <%= @student.email %>
</p>

<p>
  <strong>Address:</strong>
  <%= @student.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @student.phone %>
</p>


<p>

<p>
  <strong>Sections and Professors:</strong>
  <br>
  <% Enrollment.all.each do |enrollment| %>
      <% if enrollment.student.name == @student.name %>
          <% Section.all.each do |section|%>
              <% if section.number == enrollment.section.number %>
                  <%= enrollment.section.number %> <%= section.professor.name %>
                  <br>
              <% end %>
          <% end %>
      <% end %>
  <% end %>
</p>


<br>


