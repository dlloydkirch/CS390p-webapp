<h><strong> This shows the details of Professors </strong></h>

<p>
  <strong>Name:</strong>
  <%= @professor.name %>
</p>

<p>
  <strong>Id number:</strong>

  <%= @professor.id_number %>
</p>

<p>
  <strong>Department:</strong>
  <%= @professor.department %>
</p>

<p>
  <strong>Office:</strong>
  <%= @professor.office %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @professor.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @professor.email %>
</p>

<p>
  <strong>Sections:</strong>
  <br>
  <% Section.all.each do |section| %>
      <% if section.professor.name == @professor.name %>
          <% Enrollment.all.each do |enrollment| %>
              <% if enrollment.section.number == section.number %>
                 <%= section.number %>
                  <%= section.course.title %>

                  <%= enrollment.section.number %>
                 <%= enrollment.student.name %>
              <% end %>
              <br>
          <% end %>
          <br>
      <% end %>
      <br>
  <% end %>
</p>

<p>
  <strong>Students:</strong>
  <br>
  <% Student.all.each do |student| %>
      <%= student.name %> ----
      <% end %>
  ----
  <br>
  ----
  <% Enrollment.all.each do |enrollment| %>
      <%= enrollment.section.number %> ----
      <%= enrollment.student.name %> ----
      <br>
  <% end %>
  <br>
</p>

<%= link_to 'Edit', edit_professor_path(@professor) %> |
<%= link_to 'Back', professors_path %>



